---
import ExperienceItem from "./ExperienceItem.astro";
const experience = [
    {
        role: 'Software Engineer',
        company: 'Google',
        date: '2020 - Present',
        description: 'Working on the Google Search team to improve the search experience for users.'

    },
    {
        role: 'Software Engineer',
        company: 'Facebook',
        date: '2018 - 2020',
        description: 'Worked on the Facebook Ads team to improve the relevance of ads shown to users.'
    }
]
---

<section>
    <h2 class="mb-4">Work Experience</h2>
    <ol class="relative border-s border-gray-200 dark:border-gray-700">
        {
            experience.map(({role, company, date, description}) => (
                    <li class="mb-10 ms-4">
                        <ExperienceItem role={role} company={company} date={date} description={description}/>
                    </li>
            ))
        }
    </ol>
</section>

